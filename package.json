{
  "name": "poker-simulator",
  "version": "0.3",
  "scripts": {
    "dev": "vite dev",
    "build:wasm": "wasm-pack build ./poker-solver --target web && cp ./poker-solver/pkg/*.wasm ./static/assets",
    "build:wasm-ci": "./build-wasm.sh",
    "build": "vite build",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "preview": "vite preview",
    "deploy": "touch build/.nojekyll && gh-pages -d build -t true --dotfiles true",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^1.0.0",
    "@sveltejs/adapter-static": "^1.0.0",
    "@sveltejs/kit": "^1.0.0",
    "@tailwindcss/typography": "^0.5.9",
    "@vitest/coverage-c8": "^0.28.3",
    "autoprefixer": "^10.4.13",
    "chart.js": "^4.2.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte3": "^4.0.0",
    "gh-pages": "^3.2.3",
    "postcss": "^8.4.20",
    "prettier-plugin-svelte": "^2.8.1",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "svelte": "^3.54.0",
    "svelte-i18n": "^3.3.13",
    "svelte-preprocess": "^5.0.0",
    "tailwindcss": "^3.2.4",
    "poker-solver": "file:poker-solver/pkg",
    "vite": "^4.0.0",
    "vitest": "^0.28.3"
  },
  "type": "module"
}
